#!/bin/bash

path="$(cd "$(dirname "$1")"; pwd)"
csdir="$(cd "$(dirname "$0")"; pwd)"
shift
restofcommands=$@
echo $me

pushd .
cd $csdir
docker compose run --rm -u $(id -u):$(id -g) -v "$path:/var/test" codesniffer ./vendor/bin/phpcs -v --standard="/var/pdga/src/ruleset.xml" ../test $restofcommands
popd
